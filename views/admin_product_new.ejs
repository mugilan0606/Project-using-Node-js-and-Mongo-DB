<!DOCTYPE html>
<html>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <style>
        body {font-family: Arial, Helvetica, sans-serif;}
        * {box-sizing: border-box;}
        input[type=text], input[type=url] {
            width: 80%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }
        input[ng-model=addMe]{
            width:75%;
            padding:15px;
            margin:5px 0 22px 0;
            display:inline-block;
            border:none;
            background: #f1f1f1;
        }
        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 25px;
        }
        .modal {
            position: fixed;
            left: 0; 
            top: 0;
            width: 100%; 
            height: 100%; 
            overflow: auto; 
            background-color: #5c5c5c;
            padding-top: 50px;
        }
        .model-content {
            padding-left: 10%;
            background-color: #fefefe;
            margin: 5% auto 15% auto; 
            border: 1px solid #888;
            width: 80%; 
            padding-top:5%;
            padding-bottom:5%;
            padding-right:10%;
        }
        .heading{
            font-size:50px;
            color:#ffae00;
            font-family:Helvetica;

        }
        #prod-select{
            width:80%;
            display:inline-block;
        }
        .btn-add{
            padding:13px;
            margin:10px 0 22px 0;
            width:50px;

            display:inline-block;
            border:none;
            background:#ffae00;
            border-radius: 10px;
            font-size: 20px;

        }

        select{
            width:60%;
             padding:15px;
             margin:30px 0 22px 0;
             display:inline-block;
             border:1px;
            background:#e6e6e6
        }
        .list{
                padding:0px;
                margin:0;
                width:100%;
                overflow:auto;
            }
        .list li{
            padding:16px 16px;
            border-bottom:1px solid #ddd;
            
            width:80%;
        }

        .err{
            color:red;
        }
        .txtarea{
            width: 80%;
            height:150px;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }
        .feat-txt-area{
            width:75%;
            height:60px;
            padding:15px;
            margin-right: 1 5px;
            margin:5px 0 22px 0;
            display:flex;
            border:none;
            background: #f1f1f1;
        }
        .submit-btn{
            background-color:#ffae00;
            color: black;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 20%;
            opacity: 0.9;
            border-radius: 10px;
        }
        
        .reset-btn{
            background-color:#ffae00;
            color: black;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer; 
            width: 20%;
            opacity: 0.9;
            border-radius: 10px;
        }
    </style>
<body>
    <div ng-app="admin2"  class="modal"> 
        <center><p class="heading">Product Details</p></center>
        <div class="model-content">
        <form name="myForm" ng-controller="mainCtrl" novalidate action="/product_new_update", method="POST">
            
            <p>Enter product name:</p>
            <input type="text" placeholder="Product name" ng-model="val1" name="val1" required>
            <span style="color:red" ng-show="myForm.val1.$dirty && myForm.val1.$invalid">
                <span ng-show="myForm.val1.$error.required">This field is required</span>
            </span>
            <p>On card Image Url</p>
            <input type="url" placeholder="Enter image URL for card" name="cardImg" ng-model="imgUrl" class="imgUrl" >
            <p>Image URL's</p>
            <div>
                <div>
                    <input type="url" placeholder="Enter image URL 1 Here" ng-model="imgUrl1" class="imgUrl1" name="imgUrl1" >
                    <input type="url" placeholder="Enter image URL 2 Here" ng-model="imgUrl2" class="imgUrl2" name="imgUrl2">
                    <input type="url" placeholder="Enter image URL 3 Here" ng-model="imgUrl3" class="imgUrl3" name="imgUrl3">
                    <input type="url" placeholder="Enter image URL 4 Here" ng-model="imgUrl4" class="imgUrl4" name="imgUrl4">
                    <input type="url" placeholder="Enter image URL 5 Here" ng-model="imgUrl5" class="imgUrl5" name="imgUrl5">
                </div>
               
            </div>
            
            <p>Brand:</p>  
            <input type="text" placeholder="Brand name" ng-model="val2" name="val2" required>
            <span ng-show="myForm.val2.$dirty && myForm.val2.$invalid">
            <span  style="color:red" ng-show="myForm.val2.$error.required">This field is required</span>
            </span>
            <p>Price:</p>
           <input type="text"  ng-pattern="/^[0-9]*$/" placeholder="Product Price (in Dollars($))" ng-model="val3" name="val3" required>
           <span ng-show="myForm.val3.$dirty && myForm.val3.$invalid"> 
                <span  style="color:red" ng-show="myForm.val3.$error.pattern">Integer input only</span>
                <span  style="color:red" ng-show="myForm.val3.$error.required">This field is required</span>
            </span>
            <p>Mrp:</p>

             <input type="text"  placeholder="Product Mrp (in Dollars($))" ng-pattern="/^[0-9]*$/" ng-model="val4" name="val4" required>
             <span ng-show="myForm.val4.$dirty && myForm.val4.$invalid">
                <span  style="color:red" ng-show="myForm.val4.$error.pattern">Integer input only</span>
                <span  style="color:red" ng-show="myForm.val4.$error.required">This field is required</span>
            </span>
            <p>Description:</p>
            <textarea class="txtarea" name="description"></textarea>
            <p>Features:</p>
            <div>
                <div>
                    <input type="text" placeholder="Enter Feature 1 Here" ng-model="feature1" name="feature1">
                    <input type="text" placeholder="Enter Feature 2 Here" ng-model="feature2" name="feature2">
                    <input type="text" placeholder="Enter Feature 3 Here" ng-model="feature3" name="feature3">
                    <input type="text" placeholder="Enter Feature 4 Here" ng-model="feature4" name="feature4">
                    <input type="text" placeholder="Enter Feature 5 Here" ng-model="feature5" name="feature5">
                </div>
            </div>
            <button type="reset" class="reset-btn">Reset</button>
            <button type="submit" class="submit-btn" ng-disabled="myForm.val1.$dirty && myForm.val1.$invalid ||
            myForm.val2.$dirty && myForm.val2.$invalid || myForm.val3.$dirty && myForm.val3.$invalid ||
            myForm.val4.$dirty && myForm.val4.$invalid ">Save changes</button>
            
        </form>
        </div>
    </div>
    <script>
        var app = angular.module("admin2", []); 
        
        app.controller("mainCtrl", function($scope) {
            
        });
    </script>   
</body>
</html>