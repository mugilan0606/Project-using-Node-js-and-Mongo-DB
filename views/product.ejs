  outline: none;
  transition: all 0.3s;
}
.text-field:hover,
.message-field:hover {
  background: #1b1b1b;
  transition: all 0.3s;
}
.btn {
  padding: 10px 15px;
  background: #fdbb04;
  color: #414141;
  font-size: 12px;
  float: right;
  border: 1px solid transparent;
  border-radius: 5px;
  font-weight: 600;
  margin-left: 5px;
  padding-right: 20p;
}
.btn:hover {
  background: #dfa405;
  border: 2px solid transparent;
}
.message-field {
  padding: 5px 15px;
  display: block;
  background: #2b2b2b;
  color: #c2c2c2;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  border: none;
  margin-bottom: 12px;
  font-size: 20px;
  outline: none;
  transition: all 0.3s;
}
.contents {
